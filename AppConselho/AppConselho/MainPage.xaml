<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConselho.MainPage">

    <StackLayout>
        
        <StackLayout>

            <Label Text="Conselho:" HorizontalOptions="Center" FontSize="22" FontAttributes="Bold" />

            <Button x:Name="btn_novo_conselho" Text="Clique para ter um novo Conselho" Clicked="btn_Novo_Conselho_Clicked" />
        </StackLayout>

        <StackLayout>

            <Label Text="ID:" />
            <Label Text="{Binding ID}" />
            
            <Label Text="Mensagem:" />
            <Label Text="{Binding Mensagem}" />

        </StackLayout>




    </StackLayout>
</ContentPage>
